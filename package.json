{
  "name": "config-server",
  "version": "3.1.0",
  "description": "A REST Continuous Delivery Configuration Server",
  "author": "mail@markus-falk.com",
  "private": true,
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-push": "npm run test && npm run test:e2e",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": "^14.16.1",
    "npm": "^6.14.12"
  },
  "scripts": {
    "commitlint": "commitlint",
    "postinstall": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "sync:configfiles": "sync-glob --watch --delete 'src/_configfiles/**/*' dist/configfiles",
    "start:dev": "nest start --watch --watchAssets && npm run sync:configfiles",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "jest": "jest",
    "test": "npm run jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:watch": "jest --watch --config ./test/jest-e2e.json",
    "release": "standard-version",
    "docker:build:version": "docker build -t markusfalk/cd-config-server:$npm_package_version .",
    "docker:build:latest": "docker build -t markusfalk/cd-config-server:latest ."
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "cache-manager": "^3.4.3",
    "express-rate-limit": "^5.2.6",
    "hbs": "^4.1.1",
    "helmet": "^4.6.0",
    "reflect-metadata": "^0.1.13",
    "remote-git-tags": "^3.0.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.15",
    "@types/cache-manager": "^3.4.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "btoa": "^1.2.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "standard-version": "^9.3.0",
    "supertest": "^6.1.3",
    "sync-glob": "^1.4.0",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
